@model BookModel
@{

}

@using (Html.BeginForm("AddBook", "Home", FormMethod.Post, new {id="formRegistration",enctype="multipart/form-data"}))  
{
    <div class="form-group">  
   <label for="First Name" class="col-md-3 control-label">Book Name</label>  
    <div class="col-md-9">  
      @Html.HiddenFor(x=>x.Id)
      @Html.TextBoxFor(x => x.BookName, "", new { @class = "form-control", placeholder = "Enter your Book name here" })  
    @Html.ValidationMessageFor(x => x.BookName)
   </div>  
</div>  
<br/>  

 <div class="form-group">  
   <label for="cat" class="col-md-3 control-label">category</label>  
<div class="col-md-9">  
  
   @Html.DropDownListFor(m => m.Category, 
            new SelectList(Enum.GetValues(typeof(cat))), 
            "Select Category",new{@class="form-control"})
             @Html.ValidationMessageFor(x => x.Category)  
</div>  
</div> 
<br/>

  <div class="form-group">  
   <label for="lastname" class="col-md-3 control-label">Image</label>  
<div class="col-md-9">  
   <input type="file" name="Image"/>
   
</div>  
</div>  
<br/> 

  <div class="form-group">  
   <label for="First Name" class="col-md-3 control-label">Author</label>  
    <div class="col-md-9">  
      
      @Html.TextBoxFor(x => x.Author, "", new { @class = "form-control", placeholder = "Enter your Book author name" })  
    @Html.ValidationMessageFor(x => x.Author)
   </div>  
</div>  
<br/>  

  <div class="form-group">  
   <label for="First Name" class="col-md-3 control-label">publisher</label>  
    <div class="col-md-9">  
      
      @Html.TextBoxFor(x => x.Publisher, "", new { @class = "form-control", placeholder = "Enter your Book publisher name" })  
    @Html.ValidationMessageFor(x => x.Publisher)
   </div>  
</div>  
<br/>  

  <div class="form-group">  
   <label for="First Name" class="col-md-3 control-label">Description</label>  
    <div class="col-md-9">  
    
      @Html.TextBoxFor(x => x.Description, "", new { @class = "form-control", placeholder = "Enter your Book Description" })  
    @Html.ValidationMessageFor(x => x.Description)
   </div>  
</div>  
<br/>  


<div class="col-md-offset-3 col-md-9">
   <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i>Submit</button>
   <span style="margin-left:8px;"></span>
</div>
}